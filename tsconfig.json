{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": false, // Set to false to enforce type checking on all libraries
    "strict": true, // Enables all strict type-checking options
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": ".", // Helps resolve paths based on the base directory
    "typeRoots": [
      "./node_modules/@types",
      "./types" // Custom type definitions directory
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types.js",
    "manualDBUpdates/joinServiceAndTag.mjs"
  ],
  "exclude": ["node_modules"]
}
